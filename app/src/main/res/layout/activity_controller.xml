<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="project.cs407_mobile.ControllerActivity"
    tools:layout_editor_absoluteY="16dp"
    tools:layout_editor_absoluteX="16dp">

    <project.cs407_mobile.TouchPad
        android:layout_width="362dp"
        android:layout_height="0dp"
        android:id="@+id/touchPad"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/touchPad"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp">

        <ToggleButton
            android:id="@+id/undoButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/tx_ui_undo"
            android:checked="false"
            android:scaleType="fitCenter"
            android:textOff=""
            android:textOn=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/redoButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/tx_ui_redo"

            android:checked="false"
            android:scaleType="fitCenter"
            android:textOff=""
            android:textOn=""
            app:layout_constraintLeft_toRightOf="@+id/undoButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/pencilButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/tx_ui_pencil"
            android:backgroundTint="@drawable/toggle_selector"
            android:backgroundTintMode="multiply"
            android:checked="false"
            android:scaleType="fitCenter"
            android:textOff=""
            android:textOn=""
            app:layout_constraintRight_toLeftOf="@+id/eraserButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/eraserButton"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:background="@drawable/tx_ui_eraser"
            android:backgroundTint="@drawable/toggle_selector"
            android:backgroundTintMode="multiply"
            android:checked="false"
            android:scaleType="fitCenter"
            android:textOff=""
            android:textOn=""
            app:layout_constraintRight_toLeftOf="@+id/touchPad"
            app:layout_constraintTop_toTopOf="parent"
            tools:alpha="1.0" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:elevation="0dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/touchPad"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <GridLayout
            android:id="@+id/paletteGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:columnCount="3"
            android:elevation="0dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ToggleButton
                android:id="@+id/palette_t1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_solid"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_semisolid"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_ufo"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_solid"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_semisolid"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_ufo"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_solid"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_semisolid"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/palette_t9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@drawable/tx_tile_ufo"
                android:textOff="@null"
                android:textOn="@null" />
        </GridLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
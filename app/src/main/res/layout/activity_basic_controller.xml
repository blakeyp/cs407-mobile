<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="project.cs407_mobile.BasicControllerActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/ctrlLeft"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/button_selector"
        android:text="&lt;"
        android:textSize="72sp"
        app:layout_constraintRight_toLeftOf="@+id/ctrlRight"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="7dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ctrlRight"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="7dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/ctrlRight"
        android:layout_width="73dp"
        android:layout_height="77dp"
        android:layout_marginStart="96dp"
        android:background="@drawable/button_selector"
        android:text="&gt;"
        android:textSize="72sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="96dp" />

    <Button
        android:id="@+id/ctrlShoot"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_selector"
        android:text="Shoot"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/touchPad"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ctrlRight"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="15dp"
        app:layout_constraintHorizontal_bias="1.0" />
    <project.cs407_mobile.TouchPad
        android:layout_width="359dp"
        android:layout_height="316dp"
        android:layout_marginLeft="349dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/touchPad"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

</android.support.constraint.ConstraintLayout>